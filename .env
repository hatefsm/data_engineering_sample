# SOURCE DB (works for local or cloud)
SOURCE_DB_HOST=localhost
SOURCE_DB_PORT=5433
SOURCE_DB_NAME=sample_source
SOURCE_DB_USER=demo_user
SOURCE_DB_PASSWORD=demo_pass
SOURCE_DB_SSLMODE=prefer

# OUTPUT (local now; later you can switch to s3/azure by changing WRITER_TYPE)
BRONZE_BASE_PATH=./data/bronze
WRITER_TYPE=local

# CDC / Kafka
KAFKA_BOOTSTRAP=localhost:9092
KAFKA_GROUP_ID=cdc_bronze_writer

# CDC topics
TOPICS=source_db.public.users,source_db.public.orders

# CDC writer behavior
BATCH_SIZE=200
FLUSH_SECONDS=3

# Metadata store
METADATA_DB=./data/metadata/pipeline_meta.sqlite
